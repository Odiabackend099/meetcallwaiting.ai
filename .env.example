# Common
PUBLIC_HOSTNAME=api.callwaiting.ai
LOG_LEVEL=info

# Supabase (service role used server-side only)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid
TWILIO_WEBHOOK_AUTH_TOKEN= # optional override if different

# Number Pool
NUMBER_POOL_ENABLED=true
POOL_REGION=US

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-webhook-secret
STRIPE_CONNECT_CLIENT_ID=your-connect-client-id

# Default settings
DEFAULT_COUNTRY=US
DEFAULT_CURRENCY=usd

# Email/SMS
SENDGRID_API_KEY=your-sendgrid-api-key
# OR for Gmail OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# TTS Gateway
TTS_GATEWAY_URL=http://localhost:8790
TTS_GATEWAY_API_KEY=your-tts-api-key

# Feature flags
ENABLE_PAYMENT_LINKS=true
ENABLE_CALENDAR_BOOKING=true
ENABLE_TTS_STREAMING=true

# Compliance
RECORDING_ENABLED=false
RECORDING_RETENTION_DAYS=30

# Observability
SENTRY_DSN=your-sentry-dsn

# Environment Variables Example
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_BASE_URL=https://api.callwaiting.ai
VITE_APP_ENV=development

# Stripe Configuration (Public Key Only - NEVER expose secret keys)
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Feature Flags
VITE_FEATURE_DEMO_MODE=true
VITE_FEATURE_VOICE_INPUT=true

# Note: All sensitive operations should happen on the backend
# Never expose secret keys, API secrets, or private tokens in frontend code
